<!-- ejs: Embedded Javascript, can be used to pass variables -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>

    <script defer src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="script.js" defer></script>
    
    <title>Zoom Clone</title>
    <link rel="stylesheet" href="style.css" />
    

 
    <script src="https://kit.fontawesome.com/89421e2f20.js" crossorigin="anonymous"></script>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    
  </head>
  <body>
    <div class="main">
      <div class="main__left">
        <div class="main__videos">
          <div id="video-grid">

          </div>
        </div>
        <div class="main__controls">
            <div class="main__controls__block">
                <div onClick="muteUnmute()" class="main__controls__button main__mute_button">
                    <i class="fas fa-microphone" style="font-size: 1.5rem;"></i>
                    <span>Mute</span>
                </div>
                <div onClick="playStop()" class="main__controls__button main__video_button">
                    <i class="fas fa-video" style="font-size: 1.5rem;"></i>
                    <span>Stop Video</span>
                </div>                    
                <div onClick="closeWindow()" class="main__controls__button">
                    <i class="fas fa-phone-slash" style="font-size: 1.5rem; color: red;"></i>
                    <span style="color: red;">End Call</span>
                </div>                    
            </div>
            
        </div>
      </div>

      <div class="main__right">
        <div class="main__header">
           <div class="main__right__chat">In-call messages</div>
        </div>
        <div class="main__chat_window">
           <ul class="messages">
              
           </ul>

        </div>
        <div class="main__message_container">
           <input id="chat_message" type="text" placeholder="Type message here...">
        </div>
     </div>
    </div>

  </body>
</html>
